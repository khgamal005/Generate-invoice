# Use official Node.js image
FROM node:20

# Set working directory
WORKDIR /usr/src/app

# Copy package.json first (for caching)
COPY package*.json ./

# Install ALL dependencies (including dev)
RUN npm install

# Copy the rest of your app
COPY . .

# Expose internal container port (keep 3000)
EXPOSE 3000

# Default command: run dev (overridden by compose if needed)
CMD ["npm", "run", "dev"]

